@{
    Layout = null; // No layout for this view
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#2C1810">
    <title>Küfe Art - QR Menü</title>

    <!-- Preload critical resources -->
    <link rel="preload" href="~/css/qr-menu-modern.css" as="style">
    <link rel="preload" href="~/js/qr-menu-modern.js" as="script">

    <!-- Stylesheets -->
    <link href="~/css/qr-menu-modern.css" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- 🔄 GLOBAL LOADER -->
    <div id="globalLoader" class="global-loader">
        <div class="loader-content">
            <div class="coffee-animation">
                <div class="coffee-cup">
                    <div class="coffee-steam"></div>
                    <div class="coffee-steam"></div>
                    <div class="coffee-steam"></div>
                </div>
            </div>
            <h2 class="cafe-name">☕ Küfe Art</h2>
            <p class="loading-text">Menümüz hazırlanıyor...</p>
            <div class="loading-progress"></div>
        </div>
    </div>



    <!-- 📱 MAIN APP -->
    <div id="qrMenuApp" class="qr-menu-app" style="display: none;">

        <!-- 🏠 HEADER -->
        <header class="app-header">
            <div class="header-content">
                <div class="logo-section">
                    <div class="logo-icon">☕</div>
                    <div class="logo-text">
                        <h1 class="cafe-title">Küfe Art</h1>
                        <span class="cafe-subtitle">Küfe pointleri toplamaya başla</span>
                    </div>
                </div>

                <div class="header-info">
                    <div class="weather-display" id="weatherDisplay">
                        <span class="weather-icon">🌤️</span>
                        <span class="weather-temp">--°</span>
                    </div>
                    <div class="current-time" id="currentTime">--:--</div>
                </div>

                <div class="user-section">
                    <button class="user-btn" id="userBtn" onclick="QRMenuApp.toggleUserPanel()">
                        <i class="fas fa-user"></i>
                    </button>
                </div>
            </div>
        </header>

        <!-- 🎯 SMART SUGGESTION POPUP -->
        <div id="smartSuggestion" class="smart-suggestion" style="display: none;">
            <div class="suggestion-content">
                <button class="suggestion-close" onclick="QRMenuApp.closeSuggestion()">
                    <i class="fas fa-times"></i>
                </button>
                <div class="suggestion-body">
                    <div class="suggestion-icon" id="suggestionIcon">🌤️</div>
                    <div class="suggestion-message" id="suggestionMessage"></div>
                    <div class="suggested-product" id="suggestedProduct"></div>
                </div>
            </div>
        </div>

        <!-- 📂 CATEGORIES VIEW -->
        <div id="categoriesView" class="categories-view">
            <div class="page-title">
                <h2>Menümüz</h2>
                <p>Kategorimizi seçin</p>
            </div>
            <div class="categories-grid" id="categoriesGrid">
                <!-- Categories will be loaded here -->
            </div>
        </div>

        <!-- 🍽️ PRODUCTS VIEW -->
        <div id="productsView" class="products-view" style="display: none;">
            <div class="products-header">
                <button class="back-btn" onclick="QRMenuApp.showCategories()">
                    <i class="fas fa-arrow-left"></i>
                </button>
                <div class="category-info">
                    <h2 id="currentCategoryName">Kategori</h2>
                    <span id="productCount">0 ürün</span>
                </div>
            </div>
            <div class="products-grid" id="productsGrid">
                <!-- Products will be loaded here -->
            </div>
        </div>

        <!-- 👤 USER PANEL -->
        <!-- 👤 USER PANEL - GELİŞMİŞ VERSİYON -->
        <div id="userPanel" class="user-panel" style="display: none;">
            <div class="panel-content">
                <div class="panel-header">
                    <h3><i class="fas fa-star"></i> Küfe Point</h3>
                    <button class="panel-close" onclick="QRMenuApp.toggleUserPanel()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="panel-body" id="userPanelBody">
                    <!-- Dynamic content will be loaded here -->
                </div>
            </div>
        </div>

        <!-- 🖼️ PRODUCT MODAL -->
        <div id="productModal" class="product-modal" style="display: none;">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="modal-close" onclick="QRMenuApp.closeProductModal()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body" id="productModalBody">
                    <!-- Product details will be loaded here -->
                </div>
            </div>
        </div>

    </div>

    <footer class="developer-footer">
        <div class="footer-content">
            <div class="footer-logo">
                <i class="fas fa-code"></i>
            </div>
            <div class="footer-text">
                <span class="footer-line">
                    <i class="fas fa-heart footer-heart"></i>
                    Developer <strong>Hamza BRAVO</strong>
                </span>
            </div>
            <div class="footer-year">2025</div>
        </div>
    </footer>
    <!-- JavaScript -->
    <script src="~/js/qr-menu-modern.js"></script>
</body>
</html>